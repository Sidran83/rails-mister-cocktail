<div class="container">
  <h1>Cocktail: <%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe of the cocktail:</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-sm-12 col-md-6">
  <%= link_to "Add an ingredient",  new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to "< back",  root_path, class: "btn btn-warning"  %>
</div>
