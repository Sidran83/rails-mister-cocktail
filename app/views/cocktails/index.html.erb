<div class="container">
  <h1>My cocktails</h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= link_to "add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
      <br>
      <br>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>cocktails list</th>
          </thead>
          <% @cocktails.each do |cocktail| %>
            <tr>
              <td><%= link_to cocktail.name, cocktail_path(cocktail) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
